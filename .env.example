# ==================================
# Supabase Configuration
# ==================================
# Get these from your Supabase project settings
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==================================
# Stripe Configuration
# ==================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_... # or sk_live_... for production
STRIPE_PUBLISHABLE_KEY=pk_test_... # or pk_live_... for production
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here # From Stripe webhook configuration

# ==================================
# Invoice Ninja Configuration
# ==================================
INVOICENINJA_URL=https://portal.cdhomeimprovementsrockford.com
INVOICENINJA_API_TOKEN=your-invoice-ninja-api-token
INVOICENINJA_WEBHOOK_SECRET=your-shared-secret-for-webhooks

# ==================================
# n8n Configuration
# ==================================
N8N_WEBHOOK_URL=https://automate.cdhomeimprovementsrockford.com/webhook/lead-intake
N8N_API_KEY=your-n8n-api-key

# ==================================
# Email Service (Choose one)
# ==================================
# Postmark
POSTMARK_SERVER_TOKEN=your-postmark-server-token
POSTMARK_FROM_EMAIL=noreply@cdhomeimprovementsrockford.com

# OR SendGrid
# SENDGRID_API_KEY=SG.your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@cdhomeimprovementsrockford.com

# ==================================
# SMS Service (Optional)
# ==================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==================================
# Sentry (Error Tracking)
# ==================================
SENTRY_DSN=https://[key]@[org].ingest.sentry.io/[project]
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_PROJECT=cs-construction
SENTRY_ORG=your-org-slug

# ==================================
# Application Configuration
# ==================================
NEXT_PUBLIC_APP_URL=https://cdhomeimprovementsrockford.com
NODE_ENV=development # or production

# ==================================
# Admin/Security
# ==================================
ADMIN_API_KEY=your-secure-random-api-key
ADMIN_REPLAY_SECRET=your-secure-replay-secret

# ==================================
# Feature Flags (Optional)
# ==================================
ENABLE_INVOICENINJA_WEBHOOK=false
ENABLE_SMS_NOTIFICATIONS=false
