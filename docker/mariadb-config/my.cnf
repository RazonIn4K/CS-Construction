# ==============================================================================
# MariaDB Custom Configuration for CS-Construction
# ==============================================================================
# Optimized for Invoice Ninja workload with moderate concurrency
# VPS Specs: 4GB RAM, 2 vCPU (adjust if your VPS differs)
# ==============================================================================

[mysqld]

# ------------------------------------------------------------------------------
# Character Set & Collation (Required for Invoice Ninja)
# ------------------------------------------------------------------------------
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# ------------------------------------------------------------------------------
# Connection Settings
# ------------------------------------------------------------------------------
max_connections = 100
max_connect_errors = 10000
wait_timeout = 600
interactive_timeout = 600

# ------------------------------------------------------------------------------
# InnoDB Buffer Pool (Primary performance tuning)
# ------------------------------------------------------------------------------
# Set to 50-70% of available RAM
# For 4GB VPS: 256MB is conservative (can increase to 512MB if no other heavy services)
innodb_buffer_pool_size = 256M
innodb_buffer_pool_instances = 1

# ------------------------------------------------------------------------------
# InnoDB Log Files
# ------------------------------------------------------------------------------
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2  # Faster but slightly less durable (good for read-heavy)
innodb_flush_method = O_DIRECT

# ------------------------------------------------------------------------------
# InnoDB Performance
# ------------------------------------------------------------------------------
innodb_file_per_table = 1
innodb_stats_on_metadata = 0

# ------------------------------------------------------------------------------
# Query Cache (Deprecated in MariaDB 10.11 but good to disable explicitly)
# ------------------------------------------------------------------------------
query_cache_type = 0
query_cache_size = 0

# ------------------------------------------------------------------------------
# Temporary Tables
# ------------------------------------------------------------------------------
tmp_table_size = 32M
max_heap_table_size = 32M

# ------------------------------------------------------------------------------
# Thread Settings
# ------------------------------------------------------------------------------
thread_cache_size = 50
table_open_cache = 4000

# ------------------------------------------------------------------------------
# Slow Query Log (Useful for debugging performance)
# ------------------------------------------------------------------------------
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow-query.log
long_query_time = 2  # Log queries taking longer than 2 seconds

# ------------------------------------------------------------------------------
# Binary Logging (Disable if not doing replication)
# ------------------------------------------------------------------------------
# For backups and point-in-time recovery, keep enabled
# log_bin = /var/lib/mysql/mysql-bin
# expire_logs_days = 7
# For single-server setup, can disable to save disk space:
skip-log-bin

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# Disable local infile for security
local_infile = 0

# ------------------------------------------------------------------------------
# Client Connection Settings
# ------------------------------------------------------------------------------
[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

# ==============================================================================
# NOTES
# ==============================================================================
# After configuration changes:
#   docker-compose restart mariadb
#
# To check current settings:
#   docker-compose exec mariadb mysql -u root -p -e "SHOW VARIABLES LIKE 'innodb_buffer_pool_size';"
#
# To monitor performance:
#   docker-compose exec mariadb mysql -u root -p -e "SHOW ENGINE INNODB STATUS\G"
# ==============================================================================
